<div class="container">
  <h1>Eat All The Burgers!</h1>

  <div class="row">
    <div class="col-6">
      <h2>Burgers To Eat</h2>
      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block
        devoured=true}} {{/unless}} {{/each}}
      </ul>
    </div>

    <div class="col-6">
      <h2>Burgers Devoured</h2>
      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block
        devoured=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-4">
      <form class="create-form">
        <div class="form-group">
          <label for="newBurger">New Burger Name:</label>
          <input type="text" id="newBurger" name="burger" />
        </div>
        <button type="submit">Add a burger</button>
      </form>
    </div>
  </div>
</div>